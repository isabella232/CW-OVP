<h1 class="title">Change your password</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token, class:"input" %>

  <div class="field">
    <%= f.label :password, "New password", class:"label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, class:"input", autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class:"label" %>
    <%= f.password_field :password_confirmation, class:"input", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.submit "Change my password", class: "button is-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
